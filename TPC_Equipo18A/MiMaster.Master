<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="MiMaster.master.cs" Inherits="TPC_Equipo18A.MiMaster" %>

<!DOCTYPE html>
<html>
<head runat="server">
    <title>Mi negocio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            background-color: #ffffff;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            border-right: 1px solid #e0e0e0;
        }

            .sidebar .nav-link {
                color: #555;
                font-weight: 500;
                padding: 12px 20px;
            }

                .sidebar .nav-link.active {
                    color: #007bff;
                    background-color: #e6f2ff;
                    border-radius: 5px;
                }

                .sidebar .nav-link i {
                    margin-right: 10px;
                }

        /* Contenido principal */
        .main-content {
            margin-left: 16.666667%;
            padding: 20px;
            width: calc(100% - 16.666667%);
        }

        .topbar {
            background-color: #ffffff;
            border-bottom: 1px solid #e0e0e0;
            padding: 15px 20px;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .topbar .user-info {
                text-align: right;
                margin-left: 15px;
            }

                .topbar .user-info span {
                    display: block;
                    font-size: 0.8rem;
                    color: #888;
                }
    </style>

    <asp:ContentPlaceHolder ID="head" runat="server">
    </asp:ContentPlaceHolder>
</head>
<body>
    <form id="form1" runat="server">
        <div class="container-fluid">
            <div class="row">

                <nav class="col-md-2 d-none d-md-block sidebar">
                    <div class="sidebar-sticky">
                        <h5 class="px-3 mb-3">Mi negocio</h5>

                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <%-- Este link lo ven todos --%>
                                <asp:HyperLink CssClass="nav-link" NavigateUrl="~/Default.aspx" runat="server">
            <i class="bi bi-house-door-fill"></i> Inicio
                                </asp:HyperLink>
                            </li>
                            <li class="nav-item">
                                <%-- ID para ocultar al Vendedor --%>
                                <asp:HyperLink ID="lnkProductos" CssClass="nav-link" NavigateUrl="~/GestionProductos.aspx" runat="server">
            <i class="bi bi-box-seam"></i> Productos
                                </asp:HyperLink>
                            </li>
                            <li class="nav-item">
                                <%-- ID para ocultar al Vendedor --%>
                                <asp:HyperLink ID="lnkClientes" CssClass="nav-link" NavigateUrl="~/GestionClientes.aspx" runat="server">
            <i class="bi bi-people"></i> Clientes
                                </asp:HyperLink>
                            </li>
                            <li class="nav-item">
                                <%-- ID para ocultar al Vendedor --%>
                                <asp:HyperLink ID="lnkProveedores" CssClass="nav-link" NavigateUrl="~/GestionProveedores.aspx" runat="server">
            <i class="bi bi-truck"></i> Proveedores
                                </asp:HyperLink>
                            </li>
                            <li class="nav-item">
                                <%-- Este link lo ven todos --%>
                                <asp:HyperLink ID="lnkRegistrarVenta" CssClass="nav-link" NavigateUrl="~/RegistrarVenta.aspx" runat="server">
            <i class="bi bi-receipt"></i> Registrar Venta
                                </asp:HyperLink>
                            </li>
                            <li class="nav-item">
                                <%-- ID para ocultar al Vendedor --%>
                                <asp:HyperLink ID="lnkRegistrarCompra" CssClass="nav-link" NavigateUrl="~/RegistrarCompra.aspx" runat="server">
            <i class="bi bi-cart"></i> Registrar Compra
                                </asp:HyperLink>
                            </li>
                        </ul>
                    </div>
                </nav>

                <main role="main" class="col-md-10 ml-sm-auto main-content">
                    <div class="topbar">
                        <div>
                            <h2>Dashboard</h2>
                        </div>
                        <div class="d-flex align-items-center">
                            <a href="#" class="text-secondary"><i class="bi bi-bell-fill" style="font-size: 1.2rem;"></i></a>
                            <div class="user-info ml-3">
                                <strong>Santiago Sanchez</strong>
                                <span>Admin</span>
                            </div>
                        </div>
                    </div>
                    <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server">
                    </asp:ContentPlaceHolder>
                </main>
            </div>
        </div>
    </form>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
